{% extends "@EasyAdmin/page/content.html.twig" %}

{% block page_title %}
    {{ dashboardTitle }}
{% endblock %}

{% block content_title %}
    {{ pageTitle|trans|raw }}
{% endblock %}

{% block content %}
    <main class="d-flex flex-column justify-content-between align-items-center gap-3 mt-3">
        <div class="d-flex w-100 flex-row justify-content-between align-items-center mb-3">
            <h1 class="flex-fill">{{ dashboardTitle }}</h1>
            <img src="{{ asset('images/admin_amigo_logo.png') }}" alt="Logo blanc noir de l'AMIGO" height="80px" width="80px"/>
        </div>
        <div class="d-flex w-100 flex-column text-center gap-3">
            <div>
                <p class="fs-4">
                    Panel les plus souvent visités
                </p>
            </div>
            <div class="container">
                <div class="row mb-3">
                    <div class="col">
                        {{ include('pages/admin/_buttonCard.html.twig', {'entity': 'Évènements',
                            'icon': 'fa-calendar', 'url': 'Exposed\\EventCrudController'})
                        }}
                    </div>
                    <div class="col">
                        {{ include('pages/admin/_buttonCard.html.twig', {'entity': 'Offres de stage',
                            'icon': 'fa-user-tie', 'url': 'Exposed\\OfferCrudController'})
                        }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ include('pages/admin/_buttonCard.html.twig', {'entity': 'Partenaires',
                            'icon': 'fa-handshake', 'url': 'Exposed\\PartnerCrudController'})
                        }}
                    </div>
                    <div class="col">
                        {{ include('pages/admin/_buttonCard.html.twig', {'entity': 'Mandats',
                            'icon': 'fa-person', 'url': 'Office\\MandateCrudController'})
                        }}
                    </div>
                </div>
            </div>
        </div>
        <h6>Bienvenue sur le panel administrateur du site de l'AMIGO !</h6>
    </main>
{% endblock %}